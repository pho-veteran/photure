# Clerk Authentication
CLERK_SECRET_KEY=your_clerk_secret_key_here
VITE_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=change_me
MONGO_DATABASE=photure

# MongoDB Connection URL (uses above variables)
MONGODB_URL=mongodb://admin:change_me@mongodb:27017/photure?authSource=admin

# Backend / Microservice Configuration
DATABASE_NAME=photure
UPLOAD_DIR=/app/uploads
LOG_LEVEL=INFO
MAX_UPLOAD_BYTES=20971520

# Internal service URLs (used by API Gateway)
AUTH_SERVICE_URL=http://auth-service:8010
MEDIA_SERVICE_URL=http://media-service:8030
GALLERY_SERVICE_URL=http://gallery-service:8020

# Frontend Configuration
CLERK_SIGN_IN_URL=/sign-in
CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/
CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/
VITE_APP_URL=https://your-domain.com/
VITE_API_URL=https://your-domain.com/api

# GitLab Container Registry (for production deployment)
CI_REGISTRY_IMAGE=registry.gitlab.com/your-username/photure
CI_REGISTRY_USER=your-gitlab-username
CI_REGISTRY_PASSWORD=your-gitlab-access-token
